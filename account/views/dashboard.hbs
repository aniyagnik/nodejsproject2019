<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>dashboard</title>
    
    <link rel="stylesheet" href="style.css">
</head>
<body>
    {{>navbar}} 
        hello,{{user.username}}
    <a href="/user/chat">go to chatting</a>
    <br><br>
    <img src='{{user.image}}' alt="{{user.username}}" height='30%' width='30%'>
    <br><br>
  
    <form action='/user/dashboard/addImage' method='POST' id="form" enctype="multipart/form-data"  > 
        <div class="col-xs-12">
          select photo: <input type="file" name="Uimages" id="image" required />
        </div>
        <div class="col-xs-12">
         description: <input type="text" name="description" id="description" required />
        </div>
        <input id="submit" class="button" type="submit" value="submit"/>
    </form>
    {{#if images}}
      <div>
        {{#each images}}
          <div class="card" style="width: 18rem;display:inline-block">
            <img src="{{this.image}}" class="card-img-top" alt="{{this.image}}">
            <div class="card-body">
                <p class="card-text">{{this.description}}</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          </div>
        {{/each}}
      </div>
    {{/if}}
<script>
// Get the modal
var modal = document.getElementById('id01');
var modal2 = document.getElementById('id02');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>
</body>
</html>