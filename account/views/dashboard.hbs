<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>dashboard</title>
    <style>
      .divsize{
        height:40%;
      }
    </style>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    {{>navbar}} 
        hello,{{user.username}}
    <a href="/user/chat">go to chatting</a>
    <br><br>
    <img src='{{user.image}}' alt="{{user.username}}" height='20%' width='20%'>
    <br><br>
  
<button onclick="document.getElementById('addimgdiv').style.display='block'" class='addbutton' style="width:auto;">Add Image</button>
<div id="addimgdiv" class="addImgModal">
   <form class="modal-content-form animate" action='/user/dashboard/addImage' method='POST' id="form" enctype="multipart/form-data"  >
    <div class="imgcontainer">
      <span onclick="document.getElementById('addimgdiv').style.display='none'" class="close" title="Close Modal">&times;</span>
      <img src="{{user.image}}" alt="{{user.image}}" class="avatar">
    </div>
    <div class="containeraddimage">
      <label><b>Select Image</b></label>
      <input type="file" name='Uimages' id="image" required>
      <label ><b>Description</b></label>
      <input type="text" placeholder="Enter description" name="description" id='description' required>
      <button type="submit" class='addbutton'>Add Image</button>
    </div>
    <div class="container" style="background-color:#f1f1f1">
      <button type="button" onclick="document.getElementById('addimgdiv').style.display='none'" class="addbutton cancelbtn">Cancel</button>
    </div>
  </form>
</div>

    {{#if images}}
      <div class='posts'>
        {{#each images}}
          <div class="card divsize" style="width: 18rem;display:inline-block">
            <img src="{{this.image}}" class="card-img-top" alt="{{this.image}}">
            <div class="card-body">
                <p class="card-text">{{this.description}}</p>
                <a href="#" class="btn btn-primary">View Post</a>
            </div>
          </div>
        {{/each}}
      </div>
    {{/if}}

<script>
// Get the modal
var modal = document.getElementById('addimagediv');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>
</body>
</html>


